<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" href="/assets/style.css">
    <link href="https://fonts.googleapis.com/icon?family=Material+Icons" rel="stylesheet">
    <title>Car Rental</title>
</head>

<body>
    <table class="table-blur">
        <thead>
            <tr>
                <th>PHOTO</th>
                <th>NAME</th>
                <th>COLOR</th>
                <th>PRICE</th>
            </tr>
        </thead>
        <tbody>
            <% cars.forEach(function(carItem) { %>
                <tr>
                    <td id="image-td">
                        <img src="<%=typeof carItem.photo !='undefined' ? carItem.photo : '' %>" class="responsive-img">
                    </td>
                    <td>
                        <%= carItem.name%>
                    </td>
                    <td>
                        <%= carItem.color%>
                    </td>
                    <td>
                        <%= carItem.price%>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
    <div class="container">
        <form method="post" class="decor" enctype="multipart/form-data">
            <div class="form-left-decoration"></div>
            <div class="form-right-decoration"></div>
            <div class="circle"></div>
            <div class="form-inner">
                <input required type="text" placeholder="Name" name="name" autocomplete="off">
                <input required type="text" placeholder="Color" name="color" autocomplete="off">
                <input required type="number" placeholder="1000" name="price" autocomplete="off">
                <div class="form-file">
                    <label class="label">
                        <i class="material-icons">attach_file</i>
                        <input required type="file" name="photo">
                        </label>
                </div>
                <input type="submit" value="Добавить">
            </div>
        </form>
        <br>
    </div>
    <script src="https://code.jquery.com/jquery-3.5.1.min.js" integrity="sha256-9/aliU8dGd2tb6OSsuzixeV4y/faTqgFtohetphbbj0=" crossorigin="anonymous"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/materialize/1.0.0/js/materialize.min.js"></script>
</body>

</html>